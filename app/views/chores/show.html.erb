<div class="page-header">
  <h3>Chore #<%= @chore.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Chore name</dt>
      <dd><%= @chore.chore_name %></dd>

      <dt>Chore categories</dt>
      <dd><%= @chore.chore_categories_id %></dd>

      <dt>Chore value</dt>
      <dd><%= @chore.chore_value %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/chores" class="btn btn-primary">
        Back
      </a>
      <a href="/chores/<%= @chore.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_chore/<%= @chore.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Chore has many assignments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Assignments
      </li>

      <% @chore.assignments.each do |assignment| %>
        <li class="list-group-item">
          <a href="/assignments/<%= assignment.id %>">
            <%= assignment.chores_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/assignments/<%= assignment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_assignment/<%= assignment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
