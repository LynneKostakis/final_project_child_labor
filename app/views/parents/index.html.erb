<div class="page-header">
  <h1>
    Parents
    <a href="/parents/new" class="btn btn-lg btn-success">New Parent</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Parent name</th>
        <th>Actions</th>
      </tr>

      <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.parent_name %></td>
        <td>
          <a href="/parents/<%= parent.id %>" class="btn btn-primary">Show</a>
          <a href="/parents/<%= parent.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_parent/<%= parent.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
