<div class="page-header">
  <h1>
    Parents
    
  </h1>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Parent name</th>
        <th>Family</th>
        <th>Actions</th>
      </tr>

      <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.parent_name %></td>
        <td>
          <% if parent.family.present? %>
            <a href="/families/<%= parent.family.id %>">
              <%= parent.family.family_name %>
            </a>
          <% end %>
        </td>
        <td>

          <% if current_parent.id == parent.id %>
              <a href="/parents/<%= parent.id %>" class="btn btn-primary">Show</a>
            <a href="/parents/edit" class="btn btn-warning">Edit</a>
          <% end %> 
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
