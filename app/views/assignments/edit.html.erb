<!-- Validation failure messages -->
<% if @assignment.errors.any? %>
  <% @assignment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @assignment.chores.chore_name %> assignment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_assignment/<%= @assignment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for chores_id -->
      <div class="form-group">
        <label for="chores_id" class="control-label">
          Chores
        </label>

        <%= select_tag(:chores_id, options_from_collection_for_select(Chore.all, :id, :chore_name, @assignment.chores_id), :class => "form-control") %>
      </div>

      <!-- Label and input for parents_id -->
      <div class="form-group">


        <input type="hidden" id= "parents_id" name="parents_id" placeholder= "Parents id" class="form-control" value="<%= @assignment.parents_id %>">
       
      </div>

      <!-- Label and input for kids_id -->
      <div class="form-group">


        
        <input type="hidden" id= "kids_id" name="kids_id" placeholder= "Kids id" class="form-control" value="<%= @assignment.kids_id %>">
      
      </div>

      <!-- Label and input for due_date -->
      <div class="form-group">
        <label for="due_date" class="control-label">
          Due date
        </label>

        <input type="text" id="due_date" name="due_date" placeholder="Due date" class="form-control" value="<%= @assignment.due_date.to_date %>">
      </div>

      
      

      <button class="btn btn-warning">
        Update Assignment
      </button>
      or
      <a href="/assignments/<%= @assignment.id %>">Cancel</a>
    </form>
  </div>
</div>
