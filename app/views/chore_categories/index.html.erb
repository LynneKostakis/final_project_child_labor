<div class="page-header">
  <h1>
    Chore categories
    <a href="/chore_categories/new" class="btn btn-lg btn-success">New Chore category</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Category name</th>
        <th>Actions</th>
      </tr>

      <% @chore_categories.each do |chore_category| %>
      <tr>

        <td><%= chore_category.category_name %></td>
        <td>
          <a href="/chore_categories/<%= chore_category.id %>" class="btn btn-primary">Show</a>
          <a href="/chore_categories/<%= chore_category.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_chore_category/<%= chore_category.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @chore_categories, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
