<!-- Validation failure messages -->
<% if @chore_category.errors.any? %>
  <% @chore_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3><%= @chore_category.category_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_chore_category/<%= @chore_category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <input type="hidden" id="chore_categories_id" name="chore_categories_id" placeholder="Chore Category name" class="form-control" value="<%= @chore_category.id %>">
      <!-- Label and input for category_name -->
      <div class="form-group">
        <label for="category_name" class="control-label">
          Category name
        </label>

        <input type="text" id="category_name" name="category_name" placeholder="Category name" class="form-control" value="<%= @chore_category.category_name %>">
      </div>

      <button class="btn btn-warning">
        Update Chore Category
      </button>
      or
      <a href="/chore_categories/<%= @chore_category.id %>">Cancel</a>
    </form>
  </div>
</div>
