<!-- Validation failure messages -->
<% if @kid.errors.any? %>
  <% @kid.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Kid</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_kid" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for kid_name -->
      <div class="form-group">
        <label for="kid_name" class="control-label">
          Kid name
        </label>

        <input type="text" id="kid_name" name="kid_name" placeholder="Kid name" class="form-control" value="<%= @kid.kid_name %>">
      </div>

      <!-- Label and input for family_id -->
      <div class="form-group">



        <input type="hidden" id="family_id" name="family_id" placeholder="Family name" class="form-control" value="<%= current_parent.family_id %>">

      </div>

      <button class="btn btn-success">
        Create Kid
      </button>
      or
      <a href="/kids">Cancel</a>
    </form>
  </div>
</div>
