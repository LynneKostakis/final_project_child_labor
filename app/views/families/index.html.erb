<div class="page-header">
  <h1>
    Families
    <a href="/families/new" class="btn btn-lg btn-success">New Family</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "families_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :kids_kid_name_cont, "Kid kid_name contains" %>
      <%= f.text_field :kids_kid_name_cont, :class => "form-control", :placeholder => "Kid kid_name contains" %>
    </div>

<div class="form-group">
      <%= f.label :parents_parent_name_cont, "Parent parent_name contains" %>
      <%= f.text_field :parents_parent_name_cont, :class => "form-control", :placeholder => "Parent parent_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/families" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#families_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Kids</th>
        <th>Parents</th>
        <th>Actions</th>
      </tr>

      <% @families.each do |family| %>
      <tr>
        <td>
          <% if family.kids.present? %>
            <a href="/kids/<%= family.kids.id %>">
              <%= family.kids.kid_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if family.parents.present? %>
            <a href="/parents/<%= family.parents.id %>">
              <%= family.parents.parent_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/families/<%= family.id %>" class="btn btn-primary">Show</a>
          <a href="/families/<%= family.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_family/<%= family.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @families, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
