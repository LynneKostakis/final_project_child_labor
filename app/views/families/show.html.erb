<div class="page-header">
  <h3>Family #<%= @family.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Kids</dt>
      <dd>
        <% if @family.kids.present? %>
          <a href="/kids/<%= @family.kids_id %>">
            <%= @family.kids.kid_name %>
          </a>
        <% end %>
      </dd>

      <dt>Parents</dt>
      <dd>
        <% if @family.parents.present? %>
          <a href="/parents/<%= @family.parents_id %>">
            <%= @family.parents.parent_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/families" class="btn btn-primary">
        Back
      </a>
      <a href="/families/<%= @family.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_family/<%= @family.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
