<!-- Validation failure messages -->
<% if @family.errors.any? %>
  <% @family.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Family #<%= @family.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_family/<%= @family.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for kids_id -->
      <div class="form-group">
        <label for="kids_id" class="control-label">
          Kids
        </label>

        <input type="text" id="kids_id" name="kids_id" placeholder="Kids" class="form-control" value="<%= @family.kids_id %>">
      </div>

      <!-- Label and input for parents_id -->
      <div class="form-group">
        <label for="parents_id" class="control-label">
          Parents
        </label>

        <input type="text" id="parents_id" name="parents_id" placeholder="Parents" class="form-control" value="<%= @family.parents_id %>">
      </div>

      <button class="btn btn-warning">
        Update Family
      </button>
      or
      <a href="/families/<%= @family.id %>">Cancel</a>
    </form>
  </div>
</div>
